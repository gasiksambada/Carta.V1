<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_gravity="center_horizontal" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="20dp">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/splash_screen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Carta Prediksi Risiko PTM"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#211f22" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NAMA LENGKAP"
            android:id="@+id/label_nama"
            android:layout_gravity="center_horizontal"
            android:textColor="#c0c0c0"
            android:paddingTop="20dp"
            android:textSize="14dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="USIA"
            android:id="@+id/label_usia"
            android:layout_gravity="center_horizontal"
            android:textColor="#c0c0c0"
            android:paddingTop="20dp"
            android:textSize="14dp"
            android:textIsSelectable="true" />

        <Spinner
            android:id="@+id/usia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pilihan_umur"
            android:prompt="@string/pilih_umur"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:weightSum="6"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="JENIS KELAMIN"
                android:id="@+id/label_kelamin"
                android:layout_gravity="center_horizontal"
                android:textColor="#c0c0c0"
                android:layout_weight="4"
                android:textSize="14dp"
                android:textIsSelectable="true" />

            <RadioGroup
                android:id="@+id/kelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="4"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/kelaminlaki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laki-laki"
                    android:checked="true"
                    android:layout_weight="2"/>

                <RadioButton
                    android:id="@+id/kelaminperempuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:layout_weight="2"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:weightSum="6"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="MEROKOK"
                android:id="@+id/label_merokok"
                android:layout_gravity="center_horizontal"
                android:textColor="#c0c0c0"
                android:layout_weight="4"
                android:textSize="14dp"
                android:textIsSelectable="true" />

            <RadioGroup
                android:id="@+id/merokok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="4"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/merokokya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ya"
                    android:checked="true"
                    android:layout_weight="2"/>

                <RadioButton
                    android:id="@+id/merokoktidak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak"
                    android:layout_weight="2"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:weightSum="6"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DIABETES"
                android:id="@+id/label_diabetes"
                android:layout_gravity="center_horizontal"
                android:textColor="#c0c0c0"
                android:layout_weight="4"
                android:textSize="14dp"
                android:textIsSelectable="true" />

            <RadioGroup
                android:id="@+id/diabetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="4"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/diabetesya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ya"
                    android:checked="true"
                    android:layout_weight="2"/>

                <RadioButton
                    android:id="@+id/diabetestidak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak"
                    android:layout_weight="2"/>

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="KOLESTEROL"
            android:id="@+id/label_kolesterol"
            android:layout_gravity="center_horizontal"
            android:textColor="#c0c0c0"
            android:paddingTop="20dp"
            android:textSize="14dp"
            android:textIsSelectable="true" />

        <Spinner
            android:id="@+id/kolesterol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pilihan_nilai_kolestrol"
            android:prompt="@string/pilih_nilai_kolestrol"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TEKANAN DARAH (SISTOLE)"
            android:id="@+id/label_tekanandarah"
            android:layout_gravity="center_horizontal"
            android:textColor="#c0c0c0"
            android:paddingTop="20dp"
            android:textSize="14dp"
            android:textIsSelectable="true" />

        <Spinner
            android:id="@+id/tekanandarah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pilihan_tekanan_darah"
            android:prompt="@string/pilih_tekanan_darah"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/kirim"
            android:id="@+id/kirim"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_green"
            android:textColor="#ffffff"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
